using System;
using System.Collections.Generic;
using System.Linq;
using System.Net;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Navigation;
using Microsoft.Phone.Controls;
using Microsoft.Phone.Shell;
namespace myanumber
{
    public partial class EnterPin : PhoneApplicationPage
    {
        public EnterPin()
        {
            InitializeComponent();
        }

        protected override void OnNavigatedTo(System.Windows.Navigation.NavigationEventArgs e)
        {
            try
            {
                base.OnNavigatedTo(e);
                if (PhoneApplicationService.Current.State.ContainsKey("EnterLinkedNumberTextBox"))
                {
                    SecondaryPhoneNumber.Text = (string)PhoneApplicationService.Current.State["EnterLinkedNumberTextBox"];
                }
            }
            catch (Exception ex) 
            {
                throw;
            }
        }

        private void PinCodeTextBox_GotFocus(object sender, RoutedEventArgs e)
        {
            try
            {
                NavigationService.Navigate(new Uri("/EnterCode.xaml", UriKind.Relative));
            }
            catch (Exception ex) 
            {
                throw;
            }
        }

        private void BackButton_Click(object sender, RoutedEventArgs e)
        {
            NavigationService.Navigate(new Uri("/MainPage.xaml", UriKind.Relative));
        }
    }
}