using System;
using System.Collections.Generic;
using System.Linq;
using System.Net;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Navigation;
using Microsoft.Phone.Controls;
using Microsoft.Phone.Shell;

namespace myanumber
{
    public partial class EnterCode : PhoneApplicationPage
    {
        public EnterCode()
        {
            InitializeComponent();
            EnterPinCodeTextBox.MaxLength = 6;
        }

        private bool isNextButtonEnabled;

        private void EnterPinCodeTextBox_KeyUP(object sender, System.Windows.Input.KeyEventArgs e)
        {
            if (EnterPinCodeTextBox.Text.ToString().Length == 6)
            {                
                NextButton.Style = (Style)Application.Current.Resources["EnableButtonStyle"];
                isNextButtonEnabled = true;
            }
            else
            {
                NextButton.Style = (Style)Application.Current.Resources["DisableButtonStyle"];
                isNextButtonEnabled = false;
            }
        }      

        private void NextButton_Click(object sender, RoutedEventArgs e)
        {
            if (isNextButtonEnabled)
            {
                MessageBox.Show("Next Page");
            }
        }
       
        private void TextBlock_Tap(object sender, System.Windows.Input.GestureEventArgs e)
        {
            MessageBox.Show("Tabbed");
        }
       
    }
}