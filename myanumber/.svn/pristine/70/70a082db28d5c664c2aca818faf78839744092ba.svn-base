using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace TwinningAPIWrapper.Models
{
    public class TwinningInformation
    {
        public string PrimaryDevicePhoneNumber { get; private set; }
        public string SecondaryDevicePhoneNumber { get; private set; }

        public bool TwinningStatus { get; private set; }
        public bool CallForwardingStatus { get; private set; }

        public TwinningInformation(string primaryPhoneNumber, string secondaryPhoneNumber, bool twinningStatus, bool callForwardingStatus)
        {
            this.PrimaryDevicePhoneNumber = primaryPhoneNumber;
            this.SecondaryDevicePhoneNumber = secondaryPhoneNumber;
            this.TwinningStatus = twinningStatus;
            this.CallForwardingStatus = callForwardingStatus;
        }
    }
}
